<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry&amp;key=AIzaSyAVdLyIXC4X31tjWLdcQHu5HvgWIl0BowM" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<div class="fm-map" data-markers="<%=@hash.to_json%>"></div>

<div class="fm-filterbox panel panel-default small">
    <div class="panel-heading">
        <a data-toggle="collapse" href="#filterbox-content"><i class="js-collapse-handler glyphicon glyphicon-chevron-down"></i></a>
        <b class="filter-title">Find an event to attend.</b>
    </div>
    <div id="filterbox-content" class="panel-collapse in">
      <div class="panel-body">

        <form class="form-horizontal" role="form">
          <div class="form-group">
            <label for="input-date" class="col-xs-2 control-label">Date</label>
            <div class="col-xs-6 input-group input-group-sm">
              <span class="input-group-addon">
                <i class="glyphicon glyphicon-calendar"></i>
              </span>
              <input type="text" class="form-control" id="input-date" placeholder="">
            </div>
          </div>
          <hr>
          <div class="form-group">
            <label for="input-category" class="col-xs-2 control-label">Category</label>
            <div class="col-xs-10 js-category">
              <div class="clearfix">
                <% for category in @top_categories[0..2] %>
                  <label class="checkbox-inline col-xs-3  ">
                    <input type="checkbox"> <%=category[:title]%>
                  </label>
                <% end %>
              </div>
              <div class="js-more-categories clearfix" style="display: none">
                <hr>
                <% for category in @top_categories[3..@top_categories.length] %>
                  <label class="checkbox-inline col-xs-3">
                    <input type="checkbox"> <%=category[:title]%>
                  </label>
                <% end %>
              </div>
              <button type="button" class="btn btn-sm btn-default js-more">more</button>
            </div>
          </div>
          <hr>
          <div class="form-group">
            <div class="col-xs-offset-2 col-xs-10">
              <button type="submit" class="btn btn-sm btn-primary">Search</button>
            </div>
          </div>
        </form>

      </div>
    </div>
</div>


